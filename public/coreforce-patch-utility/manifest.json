{
  "manifest_version": 3,
  "name": "CoreFORCE Patch Utility",
  "version": "2.0.1",
  "description": "Patch common issues with CoreFORCE",
  "update_url": "https://manager.x-ringsupply.com/coreforce-patch-utility/updates.xml",
  "content_scripts": [
    {
      "js": [
        "patches/editor-sizer.js"
      ],
      "css": [
        "assets/patches/editor-sizer.css"
      ],
      "matches": [
        "*://x-ringsupply.coreware.com/*",
        "*://x-ringsupply.com/*"
      ],
      "world": "MAIN"
    },
    {
      "js": [
        "patches/css-to-sass.js"
      ],
      "matches": [
        "*://x-ringsupply.coreware.com/sass-header-maintenance*url_page=show*",
        "*://x-ringsupply.com/sass-header-maintenance*url_page=show*"
      ],
      "world": "MAIN"
    },
    {
      "js": [
        "patches/activity-observer.js"
      ],
      "matches": [
        "*://x-ringsupply.coreware.com/*",
        "*://x-ringsupply.com/*"
      ],
      "exclude_matches": [
        "*://x-ringsupply.coreware.com/-check-session*",
        "*://x-ringsupply.com/-check-session*",
        "*://x-ringsupply.coreware.com/logout.php*",
        "*://x-ringsupply.com/logout.php*",
        "*://x-ringsupply.coreware.com/loginform.php*",
        "*://x-ringsupply.com/loginform.php*"
      ]
    },
    {
      "js": [
        "patches/session-observer.js"
      ],
      "matches": [
        "*://x-ringsupply.coreware.com/-check-session*",
        "*://x-ringsupply.com/-check-session*"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "host_permissions": [
    "https://x-ringsupply.coreware.com/*",
    "https://x-ringsupply.com/*"
  ],
  "permissions": [
    "alarms"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  }
}